{
	"$schema": "https://raw.githubusercontent.com/composer/composer/main/res/composer-schema.json",
	"name": "bring/template",
	"description": "Bring App Starter Template",
	"type": "project",
	"autoload": {
		"psr-4": {
			"BringTheme\\": "plugins/bring-app/src/"
		}
	},
	"scripts": {
		"lint": "plugins/bring-app/vendor/bin/phpstan analyse"
	},
	"authors": [
		{
			"name": "Bring Theme Ltd.",
			"homepage": "https://thebringteam.com/"
		}
	],
	"require": {
		"vlucas/phpdotenv": "^5.6",
		"bring/blocks-wp": "@dev"
	},
	"require-dev": {
		"php-stubs/acf-pro-stubs": "^6.1.7",
		"phpstan/phpstan": "^1.10",
		"php-stubs/wordpress-stubs": "^6.4",
		"szepeviktor/phpstan-wordpress": "^1.3"
	},
	"config": {
		"vendor-dir": "plugins/bring-app/vendor"
	},
	"repositories": [
		{
			"type": "path",
			"url": "../../packages/blocks-wp",
			"options": {
				"symlink": false
			}
		}
	]
}
