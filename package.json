{
	"name": "bringblocks-project",
	"version": "0.0.0",
	"description": "GPL-2.0-or-later",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gaborbankutidev/BringBlocks.git"
	},
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"packageManager": "yarn@4.3.1",
	"scripts": {
		"all": "turbo types test lint build",
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:docs": "typedoc --watch --preserveWatchOutput",
		"docs": "typedoc",
		"format": "yarn format:prettier --write",
		"format:check": "yarn format:prettier --check",
		"format:prettier": "prettier \"./**/*.{ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
		"lint": "turbo lint",
		"test": "turbo test",
		"types": "turbo types"
	},
	"devDependencies": {
		"prettier": "^3.2.5",
		"prettier-plugin-pkg": "^0.18.1",
		"tsup": "^8.1.0",
		"turbo": "^2.0.6",
		"typedoc": "^0.26.3",
		"typescript": "^5.5.3"
	}
}
