{
  "name": "bringblocks-project",
  "version": "0.0.0",
  "description": "GPL-2.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaborbankutidev/BringBlocks.git"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "all": "turbo types test lint build",
    "build": "turbo build",
    "build:app": "turbo build --filter=@bring/bring-app",
    "build:pkg": "turbo build --filter=@bring/blocks-client --filter=@bring/blocks-editor",
    "install:composer:app": "cd apps/bring-app && composer install && composer dump-autoload",
    "dev": "turbo dev",
    "dev:app": "turbo dev --filter=@bring/bring-app",
    "dev:docs": "typedoc --watch --preserveWatchOutput",
    "dev:pkg": "turbo dev --filter=@bring/blocks-client --filter=@bring/blocks-editor",
    "devapp": "turbo devapp",
    "docs": "typedoc",
    "format": "yarn format:prettier --write",
    "format:check": "yarn format:prettier --check",
    "format:prettier": "prettier \"./**/*.{ts,tsx,js,jsx,json,css,md,yml,yaml}\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "types": "turbo types"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.22.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-tailwindcss": "0.5.13",
    "tsup": "^8.1.0",
    "turbo": "^2.0.6",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3"
  }
}
